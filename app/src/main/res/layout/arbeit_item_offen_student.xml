<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="2dp"
    android:background="@drawable/item_background">

    <!-- Vertikaler Container für den Namen der Thesis und das Fach -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Vertikaler Container für den Namen der Thesis -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <!-- Überschrift "Name der Thesis" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name der Arbeit"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- TextView für den Namen der Thesis -->
            <TextView
                android:id="@+id/textViewArbeitNameOffenStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Thesisname"/>
        </LinearLayout>

        <!-- Vertikaler Container für das Fach -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="end">

            <!-- Überschrift "Fach" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fach"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- TextView für das Fach -->
            <TextView
                android:id="@+id/textViewArbeitFachOffenStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Fachbezeichnung"/>
        </LinearLayout>
    </LinearLayout>

    <!-- TextView für die Beschreibung der Thesis -->
    <TextView
        android:id="@+id/textViewArbeitBeschreibungOffenStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Beschreibungstext"
        android:layout_marginTop="4dp"/>
</LinearLayout>

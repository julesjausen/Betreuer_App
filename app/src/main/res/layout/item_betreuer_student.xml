<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_background"
    android:layout_margin="2dp"
    android:padding="10dp">

    <!-- Vertikaler Container für den Namen des Betreuers -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:layout_marginEnd="8dp">

        <!-- Überschrift für "Name des Betreuers" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name des Betreuers"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <!-- TextView für den Namen des Betreuers -->
        <TextView
            android:id="@+id/name_betreuer_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Betreuername"/>
    </LinearLayout>

    <!-- Vertikaler Container für das Fach -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="end">

        <!-- Überschrift für "Fach" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fach"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <!-- TextView für das Fach -->
        <TextView
            android:id="@+id/name_fach_betreuer_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Fach"/>
    </LinearLayout>
</LinearLayout>

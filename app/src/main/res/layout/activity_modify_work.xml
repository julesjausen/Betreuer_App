<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddWork"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <TextView
        android:id="@+id/textViewWorkNameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name der Arbeit"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary" />

    <TextView
        android:id="@+id/textViewWorkNameZweitgutachter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name der Arbeit"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textViewDescriptionZweitgutachterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beschreibung"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary" />

    <TextView
        android:id="@+id/textViewDescriptionZweitgutachter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Beschreibung"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/textViewStatusZweitgutachterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary" />

    <TextView
        android:id="@+id/textViewStatusZweitgutachter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewRechnungsstatusZweitgutachterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rechnungsstatus"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary" />

    <Spinner
        android:id="@+id/spinnerRechnungsstatusAddWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="bottom">

        <!-- Button "Abbrechen" -->
        <Button
            android:id="@+id/buttonCancelZweitgutachter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Abbrechen"/>

        <!-- Zwischenraum zwischen den Buttons -->
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <!-- Button "Speichern" -->
        <Button
            android:id="@+id/buttonSaveAddWork"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Speichern"/>
    </LinearLayout>
</LinearLayout>
